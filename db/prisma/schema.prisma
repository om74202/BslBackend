generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String @id @default(uuid()) 
  name          String
  email         String @unique
  address       String
  phoneNumber   String
  imageUrl      String?     
  shiftCount    Int
  shifts        ShiftTimings[]
  unit          String
  Department    String
  Desingation   String
  users         User[]
  devices       Device[]
  lines         Line[]
}

model ShiftTimings{
  id            String @id @default(uuid())           //shift 
  start           String
  end             String
  plannedBreaks   PlannedBreak[]
  organizationId  String
  lines           Line[]   @relation("LineShift")
  organization    Organization   @relation(fields: [organizationId], references: [id])
}

model CustomShiftsTimings {
  id           String         @id @default(uuid()) 
  start        String
  end          String
  lineId       String
  line         Line @relation(fields: [lineId],references: [lineId])
  plannedBreaksCustom PlannedBreakCustom[]     
}

model PlannedBreakCustom {
  id         String             @id @default(uuid()) 
  start      String
  end        String
  typeOfBreak  String
  customShiftsTimings CustomShiftsTimings @relation(fields: [customShiftTimingId], references: [id])
  customShiftTimingId String   
}

model PlannedBreak{
  id            String @id @default(uuid())
  start        String
  end          String
  typeOfBreak        TypeOfBreak
  ShiftId      String
  shiftTimings        ShiftTimings  @relation(fields: [ShiftId] , references: [id])
}

model Line{
  lineId           String @id @default(uuid()) 
  lineName        String 
  lineType     String
  noOfShifts    Int
  noOfCustomShifts  Int
  noOfStations     Int
  customShiftsTimings   CustomShiftsTimings[]
  organizationId    String
  organization      Organization @relation(fields: [organizationId],references: [id])
  users            User[] @relation("UserLine")
  shiftTimings       ShiftTimings[] @relation("LineShift")
  stations     Station[]
  devices      Device[]
}

model Station{
  id           String @id @default(uuid())
  name         String
  Pokayoke     Boolean @default(false)
  lineId       String
  line         Line @relation(fields: [lineId],references: [lineId])
}

model User {
  id            String @id @default(uuid()) 
  name          String 
  email         String @unique
  password      String
  uploadImageUrl      String?
  role          Role  
  status        Status @default(Active)
  createdAt     DateTime @default(now())
  address       String
  phoneNumber   String
  lastLogin     DateTime?
  lines          Line[]   @relation("UserLine")
  organizationId  String
  organization   Organization @relation(fields: [organizationId],references: [id])
}

model Device{
  id            String @id @default(uuid())
  name          String
  type          String
  organizationId  String
  lineId         String
  status         DeviceStatus
  organization    Organization @relation(fields: [organizationId],references: [id])
  line            Line @relation( fields: [lineId], references: [lineId])
}
enum DeviceStatus{
  Active
  Inactive
  Maintenance
}
enum Role{
  SuperAdmin
  Admin
  SuperUser
  CheckSheetUser
  User
}

enum TypeOfBreak{
  Construction
  Maintenance
}

enum Status{
  Active
  Inactive
}
